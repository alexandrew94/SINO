<% if (messages.danger) { %>
  <h3 class="danger message"><i class="fas fa-exclamation-circle"></i> &nbsp<%= messages.danger %>
  <br>If you already have an account, <a class="message-link" href="/signin">sign in.</a></h3>
<% } %>
<div class="container">
  <h1>Sign Up</h1>
  <form action="signup" method="post">
    <div class="row">
      <div class="input-field col s12 m6">
        <label for="username_field">Username:</label>
        <input type="text" name="username" id="username_field" required>
      </div>
      <div class="input-field col s12 m6">
        <label for="email_field">Email:</label>
        <input type="email" name="email" id="email_field" required>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6">
        <label for="password_field">Password:</label>
        <input type="password" name="password" id="password_field" required>
      </div>
      <div class="input-field col s12 m6">
        <label for="confirm_password_field">Confirm Password:</label>
        <input type="password" name="confirm_password" id="confirm_password_field" required>
      </div>
    </div>
    <div class="submission">
      <button class="btn green lighten-1" type="submit" name="button">Submit</button>
    </div>
  </form>
</div>
