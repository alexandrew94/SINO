<% if (messages.danger) { %>
  <h3 class="danger message"><i class="fas fa-exclamation-circle"></i> &nbsp<%= messages.danger %></h3>
<% } %>
<div class="container">
  <div class="row">
    <h1>Edit <%= entry.name %></h1>
    <form action="/users/<%= entry.id %>" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="input-field col s12 m6">
        <label for="username_field">Username:</label>
        <input type="text" name="username" value="<%= entry.username %>" id="username_field" required>
      </div>
      <div class="input-field col s12 m6">
      <label for="email_field">Email:</label>
        <input type="email" name="email" value="<%= entry.email %>" id="email_field" required>
      </div>
      <input type="hidden" name="password" value="<%= entry.password %>" required>
      <input type="hidden" name="confirm_password" value="<%= entry.password %>" required>
      <button class="btn green lighten-1" type="submit" name="button">Submit</button>
    </form>
  </div>
</div>
